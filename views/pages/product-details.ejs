<%- include('../partials/header.ejs') %>
    <!-- ============================================================== -->
    <!-- End Left Sidebar - style you can find in sidebar.scss  -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- Page wrapper  -->
    <!-- ============================================================== -->
    <div class="page-wrapper">
        <!-- ============================================================== -->
        <!-- Bread crumb and right sidebar toggle -->
        <!-- ============================================================== -->
        <div class="page-breadcrumb">
            <div class="row">
                <div class="col-12 d-flex no-block align-items-center">
                    <h4 class="page-title">Products Detailed Info</h4>
                    <div class="ms-auto text-end">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="/">Home</a></li>
                                <li class="breadcrumb-item active" aria-current="page">
                                    More Info
                                </li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
        <!-- ============================================================== -->
        <!-- End Bread crumb and right sidebar toggle -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- Container fluid  -->
        <!-- ============================================================== -->
        <div class="container-fluid my-5">
            <!-- ============================================================== -->
            <!-- Start Page Content -->
            <!-- ============================================================== -->
            <div class="row">
                <div class="col-12 d-flex">
                    <div class="col-12 col-md-6">
                        <div class="px-2">
                            <img class="text-center" width="100%" src="<%= oneproduct.image %>" alt="<%= oneproduct.name %>" style="object-fit: cover;">
                        </div>
                    </div>
                    <div class="col-12 col-md-6 d-flex align-items-center">
                        <div class="px-2 w-100">
                            <h2><%= oneproduct.name %></h2>
                            <h4>Rs. <%= oneproduct.price %></h4>
                            <div class="d-flex">
                                <h4>Category: <span class="text-dark"><%= oneproduct.category.name %></span> </h4>
                            </div>
                            <div class="d-flex">
                                <h4>SubCategory: <span class="text-dark"><%= oneproduct.subcategory.name %></span> </h4>
                            </div>
                            <div class="d-flex">
                                <h4>ExtraCategory: <span class="text-dark"><%= oneproduct.extracategory.name %></span> </h4>
                            </div>
                            <div class="d-flex">
                                <a href="" class="btn btn-warning mx-2">
                                    Buy Now
                                </a>
                                <a href="" class="btn btn-warning mx-2">
                                    Add To Cart
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- ============================================================== -->
            <!-- End PAge Content -->
            <!-- ============================================================== -->
            <!-- ============================================================== -->
            <!-- Right sidebar -->
            <!-- ============================================================== -->
            <!-- .right-sidebar -->
            <!-- ============================================================== -->
            <!-- End Right sidebar -->
            <!-- ============================================================== -->
        </div>
        <div class="container-fluid my-5">
            <div class="row my-3">
                <div class="col-12">
                    <h2>Other Products...</h2>
                </div>
            </div>
            <!-- ============================================================== -->
            <!-- Start Page Content -->
            <!-- ============================================================== -->
            <div class="row">
                <div class="col-12 d-flex flex-wrap">
                    <% products.forEach((pro)=>{ %>
                        <% if(oneproduct.id !== pro.id){ %>
                            <div class="col-12 col-lg-6 px-1">
                            <div class="card">
                                <div class="card-details">
                                    <a href="/product-details/<%= pro._id %>">
                                        <img class="text-center" width="100%" height="250px" src="<%= pro.image %>" alt="<%= pro.name %>" style="object-fit: cover;">
                                    </a>
                                    <p class="text-title"><%= pro.extracategory.name %></p>
                                    <p class="text-body"><%= pro.name %></p>
                                </div>
                                <a href="/product-details/<%= pro._id %>" class="card-button">More info</a>
                            </div>
                        </div>
                        <% } %>
                    <% }) %>
                </div>
            </div>
            <!-- ============================================================== -->
            <!-- End PAge Content -->
            <!-- ============================================================== -->
            <!-- ============================================================== -->
            <!-- Right sidebar -->
            <!-- ============================================================== -->
            <!-- .right-sidebar -->
            <!-- ============================================================== -->
            <!-- End Right sidebar -->
            <!-- ============================================================== -->
        </div>
        <!-- ============================================================== -->
        <!-- End Container fluid  -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- footer -->
        <!-- ============================================================== -->
        <%- include('../partials/footer.ejs') %>